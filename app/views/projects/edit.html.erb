<h1>Edit Project</h1>

<%= simple_form_for @project, html: { multipart: true } do |f| %>
  <%= f.file_field :image %>
  <%= f.select :category_id, @categories %>
  <%= f.input :name, label: "Project" %>
  <%= f.input :desc, label: "Description" %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Return to project", project_path %>
